@model Models.Framework.Profile
@{
    ViewBag.Title = "AccountDetail";
}

<!-- include your less or built css files  -->
<!--
bootstrap-datetimepicker-build.less will pull in "../bootstrap/variables.less" and "bootstrap-datetimepicker.less";
or
<link rel="stylesheet" href="/Content/bootstrap-datetimepicker.css" />
-->

<link rel="stylesheet" href="~/Assets/Admin/pe524/jquery-ui-datepicker/jquery-ui.min.css" type="text/css" />
<link href="~/Assets/Admin/css/now-ui-dashboard.css?v=1.5.0" rel="stylesheet" />
<div class="panel-header panel-header-sm">
</div>
<div class="content">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="title">Edit Profile</h5>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("AccountDetail", "Accounts", FormMethod.Post, new { @class = "tm-edit-product-form", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-6 pr-1">
                                <div class="form-group">
                                    <label>First Name</label>
                                    @Html.TextBoxFor(model => model.fname, new { @type = "text", @class = "form-control validate", @required = "required", @placeholder = "First Name" })
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <label>Last Name</label>
                                    @Html.TextBoxFor(model => model.lname, new { @type = "text", @class = "form-control validate", @required = "required", @placeholder = "Last Name" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 pr-1">
                                <div class="form-group">
                                    <label>Birthday</label>
                                    @Html.TextBoxFor(model => model.birthday, new { @id = "expire_date", @name = "expire_date", @type = "text", @class = "form-control validate" })
                                </div>
                            </div>
                            <div class="col-md-4 px-1">
                                <div class="form-group">
                                    <label>Phone Number</label>
                                    @Html.TextBoxFor(model => model.phonenumber, new { @type = "text", @class = "form-control validate", @required = "required", @placeholder = "Phone Number" })
                                </div>
                            </div>
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    <label>Email Address</label>
                                    @Html.TextBoxFor(model => model.email, new { @type = "email", @class = "form-control validate", @required = "required", @placeholder = "abc@gmail.com" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Address</label>
                                    @Html.TextBoxFor(model => model.Address, new { @type = "text", @class = "form-control validate", @required = "required", @placeholder = "Address" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 pr-1">
                                <div class="form-group">
                                    <label>City</label>
                                    @Html.TextBoxFor(model => model.City, new { @type = "text", @class = "form-control validate", @required = "required", @placeholder = "City" })
                                </div>
                            </div>
                            <div class="col-md-4 px-1">
                                <div class="form-group">
                                    <label>Country</label>
                                    @Html.TextBoxFor(model => model.Country, new { @type = "text", @class = "form-control validate", @required = "required", @placeholder = "Country" })
                                </div>
                            </div>
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    <label>Postal Code</label>
                                    @Html.TextBoxFor(model => model.postalcode, new { @type = "text", @class = "form-control validate", @required = "required", @placeholder = "Zip Code" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>About Me</label>
                                    @Html.TextAreaFor(model => model.aboutme, new { @class = "form-control", @rows = "3", @cols = "80", @required = "required", @placeholder = "Here can be your description" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary btn-block text-uppercase">Update Now</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-user">
                <div class="card-header">
                    <h5 class="title">Edit Account</h5>
                </div>
                @{Html.RenderAction("ChangePassword", "Accounts", new { id = Model.username });}
                <hr>
                <div class="button-container">
                    <button href="#" class="btn btn-neutral btn-icon btn-round btn-lg">
                        <i class="fab fa-facebook-f"></i>
                    </button>
                    <button href="#" class="btn btn-neutral btn-icon btn-round btn-lg">
                        <i class="fab fa-twitter"></i>
                    </button>
                    <button href="#" class="btn btn-neutral btn-icon btn-round btn-lg">
                        <i class="fab fa-google-plus-g"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Assets/Admin/pe524/js/bootstrap.min.js"></script>
<!-- https://getbootstrap.com/ -->
<script src="~/Assets/Admin/pe524/jquery-ui-datepicker/jquery-ui.min.js"></script>
<script src="~/Assets/Admin/pe524/js/jquery-3.3.1.min.js"></script>
<script>
    $(function () {
        $("#expire_date").datepicker();
    });
</script>
